{
  "scopeName": "markdown.rdn.codeblock",
  "injectionSelector": "L:text.html.markdown",
  "patterns": [
    {
      "include": "#rdn-code-block"
    }
  ],
  "repository": {
    "rdn-code-block": {
      "begin": "(^|\\G)(\\s*)((`{3,})([Rr][Dd][Nn])\\s*$)",
      "beginCaptures": {
        "3": { "name": "markup.fenced_code.block.markdown" },
        "4": { "name": "punctuation.definition.markdown" },
        "5": { "name": "fenced_code.block.language.markdown" }
      },
      "end": "(^|\\G)(\\2|\\s{0,3})(\\4)\\s*$",
      "endCaptures": {
        "3": { "name": "punctuation.definition.markdown" }
      },
      "name": "markup.fenced_code.block.markdown",
      "patterns": [
        {
          "begin": "(^|\\G)(\\s*)(.*)",
          "while": "(^|\\G)(?!\\s*(`{3,})\\s*$)",
          "contentName": "meta.embedded.block.rdn",
          "patterns": [
            { "include": "source.rdn" }
          ]
        }
      ]
    }
  }
}
